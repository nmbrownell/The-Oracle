<UserControl x:Name="tag" x:Class="The_Oracle.Tag"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:The_Oracle"
             mc:Ignorable="d" 
             Margin="5">
    <Grid>
        <Rectangle Name="rtglBackground"  Margin="0,0,0,0" Fill="#FF80859E" VerticalAlignment="Stretch" HorizontalAlignment="Stretch" RadiusX="10" RadiusY="10"/>
        <TextBox Name="tbxContent" IsReadOnly="True" Text="" BorderThickness="0" Margin="10,0,10,3" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" FontSize="20" Background="{x:Null}" Foreground="White"/>
        <Button Name="btnClickCapture"  Background="{x:Null}" Opacity="0" Click="btnClickCapture_Click"></Button>
    </Grid>
</UserControl>
